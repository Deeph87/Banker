{% extends 'base.html.twig' %}

{% block title %}Sign in!{% endblock %}

{% block body %}

    <form method="post" class="form-signin">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connecte-toi</h1>
        <label for="username" class="sr-only">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="Email" required autofocus>
        <label for="password" class="sr-only">Password</label>
        <input type="password" name="_password" id="password" class="form-control" placeholder="Password" required>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me?
            </label>
        </div>
        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
        <p class="mt-5 mb-3 text-muted">Banker Â© 2018-2019</p>
    </form>

{% endblock %}